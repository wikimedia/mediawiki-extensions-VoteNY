{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"rules": {
		"camelcase": "off",
		"eqeqeq": "off",
		"no-jquery/no-class-state": "off",
		"no-jquery/no-global-selector": "off",
		"no-jquery/variable-pattern": "off",
		"no-implicit-globals": "off",
		"no-undef": "off",
		"no-unused-vars": "off",
		"valid-jsdoc": "off",
		"prefer-const": "warn",
		"no-jquery/no-done-fail": "warn"
	}
}
